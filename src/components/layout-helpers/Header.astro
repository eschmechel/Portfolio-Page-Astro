---
// src/components/layout-helpers/Header.astro
import ThemeToggle from '../../islands/ThemeToggle.tsx';
import MobileMenu from '../../islands/MobileMenu.tsx';

// Navigation links
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/blog', label: 'Blog' },
  { href: '/about', label: 'About' },
];

const currentPath = Astro.url.pathname;
---

<div class="sticky top-0 z-50 bg-white dark:bg-secondary-900 md:backdrop-blur-md md:bg-white/80 md:dark:bg-secondary-900/80 border-b border-secondary-200 md:border-secondary-200/50 dark:border-secondary-700 md:dark:border-secondary-700/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-center items-center h-16 relative">
      <!-- Logo/Name - positioned absolutely on the left -->
      <div class="absolute left-0 flex-shrink-0">
        <a href="/" class="text-xl font-bold text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors">
          Elliott Schmechel
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <nav class="hidden md:flex space-x-8" role="navigation" aria-label="Main navigation">
        <a href="/" class="nav-link">Home</a>
        <a href="/projects" class="nav-link">Projects</a>
        <a href="/blog" class="nav-link">Blog</a>
        <a href="/about" class="nav-link">About</a>
      </nav>
      
      <!-- Theme Toggle & Mobile Menu -->
      <div class="absolute right-0 flex items-center">
        <ThemeToggle client:load />
        <div class="ml-2">
          <MobileMenu links={navLinks} currentPath={currentPath} client:load />
        </div>
      </div>
    </div>
  </div>
</div>
