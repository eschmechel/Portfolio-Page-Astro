---
// src/components/MosaicGrid.astro
import Timeline from './Timeline.astro';
import { getCollection } from 'astro:content';
import ProjectList from '../data/projectsData';
import { fade } from 'astro:transitions';

// Get project count dynamically
let projectCount = 0;
let featuredProjects = [];
try {
  const collectionProjects = await getCollection('projects');
  projectCount = collectionProjects.length;
  console.log(`MosaicGrid: Found ${projectCount} projects in content collection`);
  const projects = collectionProjects.map((project) => project.data);
  featuredProjects = projects.filter((project) => project.isFeatured === true).slice(0, 3);
  console.log(`MosaicGrid: Found ${featuredProjects.length} featured projects in content collection`);

} catch (error) {
  // Fallback to legacy data count
  projectCount = ProjectList.length;
  featuredProjects = ProjectList.filter((project) => project.isFeatured === true).slice(0, 3);
  console.log(`MosaicGrid: Using legacy data count: ${projectCount} projects`);
  console.log(`MosaicGrid: Using legacy data featuredProjects: ${featuredProjects.length} projects`);
}
