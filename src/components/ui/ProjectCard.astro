---
import type { Project } from '../../data/projectsData';

export interface Props extends Project {
  variant?: 'full' | 'compact';
  showImage?: boolean;
  eager?: boolean; // if true, load primary image eagerly with high fetch priority
  liveSiteStatus?: 'live' | 'down' | 'unknown'; // Live site status from external check
}

const { 
  title, 
  category,
  description, 
  image, 
  technologiesList, 
  status, 
  projectPath, 
  githubLink,
  isFeatured,
  externalLink,
  variant = 'full',
  showImage = true,
  eager = false,
  siteStatus,
  liveSiteStatus,
} = Astro.props;

// Use live status if available, otherwise fall back to static status
const displaySiteStatus = liveSiteStatus || siteStatus || 'unknown';

const viewIsExternal = Boolean(projectPath && /^(https?:)?\/\//.test(projectPath));
const isCompact = variant === 'compact';

---

{isCompact ? (
  <!-- Compact List Item Layout -->
  <div 
    class="project-item bg-white dark:bg-secondary-800 border border-secondary-200 dark:border-secondary-700 rounded-lg p-4 hover:shadow-md hover:border-primary-300 dark:hover:border-primary-700 transition-all duration-200"
    data-status={status}
    data-category={category?.toLowerCase()}
    data-has-external={externalLink ? 'true' : 'false'}
    data-has-github={githubLink ? 'true' : 'false'}
    data-featured={isFeatured ? 'true' : 'false'}
    data-title={title.toLowerCase()}
    data-description={description.toLowerCase()}
    data-technologies={technologiesList?.join(' ').toLowerCase()}
  >
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <!-- Left Content -->
      <div class="flex-1 min-w-0">
        <div class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-3 mb-2">
          <h3 class="text-lg font-semibold text-secondary-900 dark:text-white truncate">
            {title}
          </h3>
          <div class="flex items-center gap-2">
            {status && (
              <span class={`px-2 py-1 text-xs font-medium rounded-full ${
                status === 'active' ? 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200' :
                status === 'in-progress' ? 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200' :
                status === 'planned' ? 'bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200' :
                status === 'on-hold' ? 'bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200' :
                status === 'archived' ? 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300' :
                'bg-secondary-100 dark:bg-secondary-700 text-secondary-800 dark:text-secondary-200'
              }`}>
                {status === 'active' ? 'Active' :
                 status === 'in-progress' ? 'In Progress' :
                 status === 'planned' ? 'Planned' :
                 status === 'on-hold' ? 'On Hold' :
                 status === 'archived' ? 'Archived' :
                 status}
              </span>
            )}
            {isFeatured && (
              <div class="relative group">
                <svg class="w-4 h-4 text-purple-500 fill-current cursor-pointer" viewBox="0 0 24 24">
                  <path d="M12 2.5c.5 0 .9.3 1.1.7l2.6 5.3 5.9.9c.8.1 1.1 1.1.5 1.6l-4.3 4.2 1 5.8c.1.8-.7 1.4-1.4 1l-5.3-2.8-5.3 2.8c-.7.4-1.5-.2-1.4-1l1-5.8-4.3-4.2c-.6-.5-.3-1.5.5-1.6l5.9-.9 2.6-5.3c.2-.4.6-.7 1.1-.7z"/>
                </svg>
                <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-1.5 text-sm font-medium bg-secondary-100 dark:bg-secondary-700 text-secondary-700 dark:text-secondary-300 border border-purple-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap z-10">
                  This is a featured project
                  <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-purple-500"></div>
                </div>
              </div>
            )}
          </div>
        </div>
        
        <p class="text-secondary-600 dark:text-secondary-400 text-sm mb-3 sm:line-clamp-2">
          {description}
        </p>
        
        {technologiesList && technologiesList.length > 0 && (
          <div class="flex flex-wrap gap-1">
            {technologiesList.slice(0, 5).map(tech => (
              <span class="px-2 py-0.5 text-xs font-medium bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded">
                {tech}
              </span>
            ))}
            {technologiesList.length > 5 && (
              <div class="relative group">
                <span class="px-2 py-0.5 text-xs text-secondary-500 dark:text-secondary-400 cursor-pointer hover:text-secondary-700 dark:hover:text-secondary-200 transition-colors">
                  +{technologiesList.length - 5} more
                </span>
                <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-2 bg-white dark:bg-secondary-800 border border-secondary-200 dark:border-secondary-700 text-secondary-900 dark:text-white text-xs rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap z-20 max-w-xs">
                  <div class="flex flex-wrap gap-1">
                    {technologiesList.slice(5).map(tech => (
                      <span class="px-2 py-0.5 text-xs font-medium bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded">
                        {tech}
                      </span>
                    ))}
                  </div>
                  <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-white dark:border-t-secondary-800"></div>
                </div>
              </div>
            )}
          </div>
        )}
      </div>
      
      <!-- Right Actions -->
      <div class="flex items-center gap-2 ml-4">
        {projectPath && (
          <a
            href={projectPath}
            target={viewIsExternal ? "_blank" : "_self"}
            rel={viewIsExternal ? "noopener noreferrer" : undefined}
            class="inline-flex items-center gap-1 px-3 py-1.5 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors text-sm font-medium"
          >
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
            </svg>
            View
          </a>
        )}
        
        {githubLink && (
          <a
            href={githubLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 px-3 py-1.5 bg-secondary-100 dark:bg-secondary-700 text-secondary-800 dark:text-secondary-200 rounded-md hover:bg-secondary-200 dark:hover:bg-secondary-600 transition-colors text-sm font-medium"
          >
            <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            Code
          </a>
        )}
        
        {externalLink && displaySiteStatus !== 'down' && (
          <a
            href={externalLink}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1 px-3 py-1.5 bg-secondary-100 dark:bg-secondary-700 text-secondary-800 dark:text-secondary-200 rounded-md hover:bg-secondary-200 dark:hover:bg-secondary-600 transition-colors text-sm font-medium"
          >
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
            Site
          </a>
        )}
      </div>
    </div>
  </div>
) : (
  <!-- Full Card Layout -->
  <div class={`bg-white dark:bg-secondary-800 rounded-xl border border-secondary-200 dark:border-secondary-700 overflow-hidden hover:shadow-lg hover:border-primary-300 dark:hover:border-primary-700 transition-all duration-300 group flex flex-col h-full ${isFeatured ? 'ring-2 ring-primary-500' : ''}`}>
    {showImage && image && (
      <div class="aspect-video overflow-hidden">
        <img 
          src={image} 
          alt={title}
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
          loading={eager ? 'eager' : 'lazy'}
          fetchpriority={'auto'}
          decoding="async"
          width="800"
          height="450"
        />
      </div>
    )}
    
    <div class="p-6 flex flex-col flex-1">
      <!-- Header -->
      <div class="flex items-start justify-between mb-3">
        <div class="flex-1">
          <h3 class="text-xl font-semibold text-secondary-900 dark:text-white group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
            {title}
          </h3>
            <p class="text-sm text-secondary-500 dark:text-secondary-400 mt-1">
              {category}
            </p>
        </div>
        
        <div class="flex flex-col items-end gap-2">
          {status && (
            <span class={`px-2 py-1 text-xs font-medium rounded-full ${
              status === 'active' ? 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200' :
              status === 'in-progress' ? 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200' :
              status === 'planned' ? 'bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200' :
              status === 'on-hold' ? 'bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200' :
              status === 'archived' ? 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300' :
              'bg-secondary-100 dark:bg-secondary-700 text-secondary-800 dark:text-secondary-200'
            }`}>
              {status === 'active' ? 'Active' :
               status === 'in-progress' ? 'In Progress' :
               status === 'planned' ? 'Planned' :
               status === 'on-hold' ? 'On Hold' :
               status === 'archived' ? 'Archived' :
               status}
            </span>
          )}
        </div>
      </div>
      
      <!-- Description -->
      <p class="text-secondary-600 dark:text-secondary-400 mb-4 leading-relaxed">
        {description}
      </p>
      
      <!-- Technologies -->
      {technologiesList && technologiesList.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-6">
          {technologiesList.map(tech => (
            <span class="px-2 py-1 text-xs font-medium bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded">
              # {tech}
            </span>
          ))}
        </div>
      )}
      
      <!-- Links -->
        <div class="flex gap-3 mt-auto">
          {(projectPath || externalLink) && (
            <a
              href={projectPath || externalLink}
              target={(projectPath && viewIsExternal) || (!projectPath && externalLink) ? "_blank" : "_self"}
              rel={((projectPath && viewIsExternal) || (!projectPath && externalLink)) ? "noopener noreferrer" : undefined}
              class="inline-flex items-center gap-2 px-3 py-1.5 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors text-sm font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
              </svg>
              {projectPath ? 'View Project' : 'Visit Site'}
            </a>
          )}

          {githubLink && (
            <a
              href={githubLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-3 py-1.5 bg-secondary-100 dark:bg-secondary-700 text-secondary-800 dark:text-secondary-200 rounded-lg hover:bg-secondary-200 dark:hover:bg-secondary-600 transition-colors text-sm font-medium"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          )}

          {externalLink && displaySiteStatus !== 'down' && (
            <a
              href={externalLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-3 py-1.5 bg-secondary-100 dark:bg-secondary-700 text-secondary-800 dark:text-secondary-200 rounded-lg hover:bg-secondary-200 dark:hover:bg-secondary-600 transition-colors text-sm font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              Project Site
            </a>
          )}
        </div>
    </div>
  </div>
)}

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
