---
// src/layouts/BaseLayout.astro
import '../styles/tailwind.css';
import Head from '../components/layout-helpers/Head.astro';
import Header from '../components/layout-helpers/Header.astro';
import Socials from '../components/ui/Socials.astro';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
}

const { title, description, canonical, ogImage, noindex } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<Head title={title} description={description} canonical={canonical} ogImage={ogImage} noindex={noindex} />
  <body class="min-h-screen flex flex-col bg-white dark:bg-secondary-900 text-secondary-800 dark:text-secondary-200">
    <div id="main-content" class="flex-1">
      <slot name="header">
        <Header />
      </slot>
      
      <main>
        <slot />
      </main>
    </div>
    
    <footer class="bg-secondary-50 dark:bg-secondary-800 border-t border-secondary-200 dark:border-secondary-700 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="grid grid-cols-1 md:grid-cols-3 items-center gap-4">
          <div class="flex justify-center md:justify-start">
            <Socials />
          </div>
          <nav class="flex justify-center gap-6" role="navigation" aria-label="Footer navigation">
            <a href="/" class="text-sm text-secondary-600 dark:text-secondary-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Home</a>
            <a href="/projects" class="text-sm text-secondary-600 dark:text-secondary-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Projects</a>
            <a href="/blog" class="text-sm text-secondary-600 dark:text-secondary-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">Blog</a>
            <a href="/about" class="text-sm text-secondary-600 dark:text-secondary-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">About</a>
          </nav>
          <div class="flex justify-center md:justify-end text-sm text-secondary-500 dark:text-secondary-500 text-center md:text-right">
            <span>&copy; 2025 Elliott Schmechel</span>
            <span class="mx-2">|</span>
            <span>MIT License</span>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
