---
// src/layouts/ProjectLayout.astro
import BaseLayout from './BaseLayout.astro';
import type { Project } from '../data/projectsData';
import { checkSiteStatus, type SiteStatus } from '../utils/siteStatusChecker';

export interface Props {
  project: Project;
}

const { project } = Astro.props;
const { 
  title, 
  category, 
  description, 
  technologiesList, 
  status, 
  projectPath, 
  githubLink, 
  externalLink, 
  image, 
  isFeatured,
  siteStatus 
} = project;

const pageTitle = `${title} | Projects`;
const pageDescription = description;

// Check live site status for websites
let liveSiteStatus: SiteStatus = siteStatus || 'unknown';
if (category === 'Website' && externalLink) {
  try {
    liveSiteStatus = await checkSiteStatus(externalLink);
  } catch (error) {
    console.warn(`Failed to check site status for ${externalLink}:`, error);
    liveSiteStatus = siteStatus || 'unknown';
  }
}
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-24">
    <!-- Back Navigation -->
    <nav class="mb-8">
      <a 
        href="/projects" 
        class="inline-flex items-center gap-2 text-secondary-600 dark:text-secondary-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Back to Projects
      </a>
    </nav>

    <!-- Project Header -->
    <header class="mb-12">
      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-6 mb-6">
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-3">
            <h1 class="text-3xl md:text-4xl font-bold text-secondary-900 dark:text-white">
              {title}
            </h1>
            {isFeatured && (
              <div class="relative group">
                <svg class="w-6 h-6 text-purple-500 fill-current" viewBox="0 0 24 24">
                  <path d="M12 2.5c.5 0 .9.3 1.1.7l2.6 5.3 5.9.9c.8.1 1.1 1.1.5 1.6l-4.3 4.2 1 5.8c.1.8-.7 1.4-1.4 1l-5.3-2.8-5.3 2.8c-.7.4-1.5-.2-1.4-1l1-5.8-4.3-4.2c-.6-.5-.3-1.5.5-1.6l5.9-.9 2.6-5.3c.2-.4.6-.7 1.1-.7z"/>
                </svg>
                <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2 px-3 py-1.5 text-sm font-medium bg-secondary-100 dark:bg-secondary-700 text-secondary-700 dark:text-secondary-300 border border-purple-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-200 pointer-events-none whitespace-nowrap z-10">
                  Featured Project
                  <div class="absolute top-full left-1/2 transform -translate-x-1/2 w-0 h-0 border-l-4 border-r-4 border-t-4 border-transparent border-t-purple-500"></div>
                </div>
              </div>
            )}
          </div>
          
          <div class="flex flex-wrap items-center gap-4 mb-4">
            <span class="px-3 py-1 text-sm font-medium bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full">
              {category}
            </span>
            
            {status && (
              <span class={`px-3 py-1 text-sm font-medium rounded-full ${
                status === 'active' ? 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200' :
                status === 'in-progress' ? 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200' :
                status === 'planned' ? 'bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200' :
                status === 'on-hold' ? 'bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200' :
                status === 'archived' ? 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300' :
                'bg-secondary-100 dark:bg-secondary-700 text-secondary-800 dark:text-secondary-200'
              }`}>
                {status === 'active' ? 'Active' :
                 status === 'in-progress' ? 'In Progress' :
                 status === 'planned' ? 'Planned' :
                 status === 'on-hold' ? 'On Hold' :
                 status === 'archived' ? 'Archived' :
                 status}
              </span>
            )}
          </div>
          
          <p class="text-lg text-secondary-600 dark:text-secondary-400 leading-relaxed">
            {description}
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row lg:flex-col gap-3 lg:min-w-0 lg:w-auto">
          
          {githubLink && (
            <a
              href={githubLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-secondary-100 dark:bg-secondary-700 text-secondary-800 dark:text-secondary-200 rounded-lg hover:bg-secondary-200 dark:hover:bg-secondary-600 transition-colors font-medium text-center"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View Source
            </a>
          )}

          {externalLink && projectPath && liveSiteStatus !== 'down' && (
            <a
              href={externalLink}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors font-medium text-center"            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
              </svg>
              External Link
            </a>
          )}
        </div>
      </div>

      <!-- Project Image -->
      {image && (
        <div class="aspect-video overflow-hidden rounded-xl border border-secondary-200 dark:border-secondary-700 mb-8">
          <img 
            src={image} 
            alt={title}
            class="w-full h-full object-cover"
            loading="eager"
            fetchpriority="high"
            decoding="async"
          />
        </div>
      )}
    </header>

    <!-- Project Content Slot -->
    <section class="prose prose-lg dark:prose-invert max-w-none">
      <slot />
    </section>

    <!-- Navigation Footer -->
    <footer class="mt-16 pt-8 border-t border-secondary-200 dark:border-secondary-700">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <a 
          href="/projects" 
          class="inline-flex items-center gap-2 text-secondary-600 dark:text-secondary-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
          </svg>
          Back to All Projects
        </a>
        
        <div class="flex items-center gap-4">
          {externalLink && liveSiteStatus !== 'down' && (
            <a
              href={externalLink}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors"
            >
              Visit Site →
            </a>
          )}
          
          {githubLink && (
            <a
              href={githubLink}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-secondary-600 dark:text-secondary-400 hover:text-secondary-700 dark:hover:text-secondary-300 transition-colors"
            >
              View Source →
            </a>
          )}
        </div>
      </div>
    </footer>
  </article>
</BaseLayout>
